<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |sign_up| %>

        <%= sign_up.label :name %>
        <%= sign_up.text_field :name, class: 'form-control'  %>

        <%= sign_up.label :email %>
        <%= sign_up.email_field :email, class: 'form-control'  %>

        <%= sign_up.label :password %>
        <%= sign_up.password_field :password, class: 'form-control'  %>

        <%= sign_up.label :password_confirmation, 'Confirm password' %>
        <%= sign_up.password_field :password_confirmation, class: 'form-control'  %>

        <%= sign_up.submit 'Create my account', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>