<%# add some links %>


<h1>List of recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Serves</th>
    <th>Time</th>
    <th colspan="3"></th>
  </tr>

  <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.serves %></td>
        <td><%= recipe.prepare_time %></td>
        <td><%= link_to 'Show', recipe_path(recipe) %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe_path(recipe),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Add new recipe', new_recipe_path %>