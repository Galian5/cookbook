<% provide(:title, @user.name) %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if false %>
   # zrobic przepisy i wtedy odkomentowac
<div>
  <% if @user.recipes.any? %>
    <strong>Recipes:</strong>
    <ul>
      <%= render @recipes %>
    </ul>
  <% end %>
</div>
<% end %>